<?xml version="1.0" encoding="UTF-8"?>
<launch>
    
    <include file ="$(find autonomous_robots)/launch/includes/safety_controller.launch.xml"/>
    <include file ="$(find autonomous_robots)/launch/includes/velocity_smoother.launch.xml"/>

    <arg name="odom_frame_id" default="odom"/>
    <arg name="base_frame_id" default="base_footprint"/>
    <arg name="global_frame_id" default="map"/>
    <arg name="odom_topic" default="odom"/>
    <arg name="laser_topic" default="scan"/>
    <arg name="custom_param_file" default="$(find autonomous_robots)/params/dummy.yaml"/>

    <!-- Setting up the move_base node and costmap parameters -->
    <node pkg="move_base" type="move_base" name="move_base" respawn="false" output="screen">

        <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS"/>

        <rosparam file="$(find autonomous_robots)/params/dwa_local_planner_params.yaml" command="load"/>
        <rosparam file="$(find autonomous_robots)/params/global_planner.yaml" command="load"/>
        <rosparam file="$(find autonomous_robots)/params/move_base_params.yaml" command="load"/>

        <!-- observation sources located in costmap_common.yaml -->
        <rosparam file="$(find autonomous_robots)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find autonomous_robots)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />

        <!-- local costmap, needs size -->
        <rosparam file="$(find turtlebot3_navigation)/param/local_costmap_params.yaml" command="load" />

        <!-- static global costmap, static map provides size -->
        <rosparam file="$(find turtlebot3_navigation)/param/global_costmap_params.yaml" command="load"/>

        <!-- external params file that could be loaded into the move_base namespace -->
        <rosparam file="$(arg custom_param_file)" command="load"/>

        <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
        <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
        <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
        <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

        <remap from="cmd_vel" to="/cmd_vel"/>
        <remap from="odom" to="$(arg odom_topic)"/>
        <remap from="scan" to="$(arg laser_topic)"/>


    </node>

</launch>